{
    "eslint.enable": false,
    "env": {
        "es6": true,
        "node": true,
        "browser": true        
    },
    "parser": "babel-eslint",
    // "extends": "eslint:recommended",
    "extends": "standard",
    "parserOptions": {
        "sourceType": "module"
    },
    "eslint.validate": [ {"language": "javascript", "autoFix": true}, {"language": "vue", "autoFix": true}],
    "eslint.autoFixOnSave": true,
    "plugins": [
        "html"
     ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "space-before-function-paren": ["error", "never"],
        "semi": [
            "error",
            "always"
        ]
    }
}